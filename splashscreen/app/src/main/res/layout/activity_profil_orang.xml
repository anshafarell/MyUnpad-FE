<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="409dp"
    android:layout_height="729dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#F9F9F9"
        tools:context=".ScrollTest">

        <ImageButton
            android:id="@+id/show_post_back"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="#F9F9F9"
            android:scaleType="fitCenter"
            android:src="@drawable/back_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/show_post_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="#F9F9F9"
            android:scaleType="fitCenter"
            android:src="@drawable/blank_profile_pic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/show_post_back" />

        <ImageButton
            android:id="@+id/show_post_image2"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:backgroundTint="#F9F9F9"
            android:scaleType="fitCenter"
            android:src="@drawable/blank_rectangle_gray"
            app:layout_constraintStart_toStartOf="@+id/profil_orang_publikasi_teks"
            app:layout_constraintTop_toBottomOf="@+id/profil_orang_publikasi_teks" />

        <TextView
            android:id="@+id/profil_orang_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Orang"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/show_post_image" />

        <TextView
            android:id="@+id/profil_orang_fakultas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="Fakultas"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profil_orang_nama" />

        <TextView
            android:id="@+id/profil_orang_prodi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="Program Studi"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profil_orang_fakultas" />

        <TextView
            android:id="@+id/profil_orang_kontak_teks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Kontak"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/show_post_image2"
            app:layout_constraintTop_toBottomOf="@+id/show_post_image2" />

        <TextView
            android:id="@+id/profil_orang_publikasi_teks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Publikasi"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/profil_orang_detail"
            app:layout_constraintTop_toBottomOf="@+id/profil_orang_detail" />

        <TextView
            android:id="@+id/profil_orang_kontak"
            android:layout_width="350dp"
            android:layout_height="113dp"
            android:text="+62000-0000-0000"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/show_post_image"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profil_orang_kontak_teks"
            app:layout_constraintTop_toBottomOf="@+id/profil_orang_kontak_teks" />

        <TextView
            android:id="@+id/profil_orang_detail"
            android:layout_width="350dp"
            android:layout_height="113dp"
            android:layout_marginTop="4dp"
            android:text="Deskripsi Orang"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profil_orang_prodi" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>